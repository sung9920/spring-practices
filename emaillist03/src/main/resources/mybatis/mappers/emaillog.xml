<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="emaillog">
	<insert id="insert">
		<![CDATA[
		insert into email_log values(current_date(), 1)
		]]>	
	</insert>
	
	<update id="update">
		<![CDATA[
		update email_log set count = count + 1 where reg_date = current_date()
		]]>	
	</update>
	
	<update id="updateByRegDate" parameterType="string">
		<![CDATA[
		update email_log set count = count - 1 where reg_date = #{regDate} 
		]]>	
	</update>
	
</mapper>
